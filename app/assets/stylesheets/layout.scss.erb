/*------------------------
---------Footer-----------
-------------------------*/

footer {
	height: 100px;
	background-color: rgba(0,0,0,.1); 
	text-align: left;
	position: relative;
	border-top: 3px $alpha-yellow solid;
	color: $dark-gray;
	overflow:hidden;

}

.social-icons {
	padding: 0;
	margin-bottom: 10px;
	background-color: none;
	text-align: center;
	position: relative;
	height: 100px;
	z-index: 1;
	
	ul {
		margin-top: 10px;
		margin-left: 15px;
		padding: 0;	
		font-size: 4em;
		a {
			color: #fff;
			&:hover {
				color: $alpha-orange;
			}

		}
		i {
			margin: 10px 15px;
		}
	}

	&:after {
		background: $alpha-yellow;
		display:block;
		content:'';
		width:100%;
		height:600px;
		-webkit-transform: skew(-20deg) rotate(15deg);
		-moz-transform: skew(-20deg) rotate(15deg);
		-o-transform: skew(-20deg) rotate(15deg);
		transform: skew(-20deg) rotate(15deg);
		position:absolute;
		top:-35px;
		left: -10%;
		z-index:-1;

	}


	&:before {
		background: $alpha-orange;
		display:block;
		content:'';
		width:15%;
		height:600px;
		-webkit-transform: skew(-20deg) rotate(15deg);
		-moz-transform: skew(-20deg) rotate(15deg);
		-o-transform: skew(-20deg) rotate(15deg);
		transform: skew(-20deg) rotate(15deg);
		position:absolute;
		top:-35px;
		left: -35%;
		z-index:-1;

	}

}

@media(max-width:767px) { 
	.social-outer {
		background-color: $alpha-yellow;
		position: relative;
		height: 100px;
		margin:0;

		-webkit-transform: skew(0deg) rotate(0deg);
		-moz-transform: skew(0deg) rotate(0deg);
		-o-transform: skew(0deg) rotate(0deg);
		transform: skew(0deg) rotate(0deg);
	}

	.social-icons {
		position: inherit;
		padding: 0;
		margin-bottom: 0px;
		background-color: none;
		text-align: center;

		-webkit-transform: skew(0deg) rotate(0deg);
		-moz-transform: skew(0deg) rotate(0deg);
		-o-transform: skew(0deg) rotate(0deg);
		transform: skew(0deg) rotate(0deg);

	 

		&:after {
			display: none;
		}

		&:before {

			position:re;
			top: 0;
			left: 0;
			height: 10px;
			width: 165px;
			-webkit-transform: skew(0deg) rotate(0deg);
			-moz-transform: skew(0deg) rotate(0deg);
			-o-transform: skew(0deg) rotate(0deg);
			transform: skew(0deg) rotate(0deg);
		}

	}
	footer {
		height: 200px;

		overflow:auto;

	}

}


