@import "global";





/*----------START------------
--- landing page header --
---------------------------*/

.intro-wrapper {
	background: transparent;
	font-weight:bold;
	width: 400px;
	height: 400px;
	position:relative;
	overflow:hidden;
  // margin-left: 10%;
  h2 {
  	text-transform: uppercase;
  	word-spacing: .3em;
  	font-size: 2.5em;
  	font-weight: 700;
  	// color: #fff;
  	-webkit-transform: rotate(-65.7deg);
  	-moz-transform: rotate(-65.7deg);
  	-o-transform: rotate(-65.7deg);
  	transform: rotate(-65.7deg);

  	text-align: center;


  	margin-top: 13px;
  	margin-left: -204px;
  	color: $alpha-orange;
  	font-family: 'Black Ops One', cursive;



  }
  .property {
  	width: 205px;
  	float: right;
  	font-size: 1.1em;
  	margin-top: -90px;
  	color: $dark-gray;
  }
}

.intro-wrapper:before {
	background: $alpha-yellow;
	display:block;
	content:'';
	width:200px;
	height:400px;
	-webkit-transform: skew(10deg);
	-moz-transform: skew(10deg);
	-o-transform: skew(10deg);
	position:absolute;  
	top:-20px;
	left:10px;
	z-index:0;
}
.intro-wrapper:after {
	background: $alpha-orange;
	display:block;
	content:'';
	width:282px;
	height:400px;
	-webkit-transform: skew(-20deg) rotate(5deg);
	-moz-transform: skew(-20deg) rotate(5deg);
	-o-transform: skew(-20deg) rotate(5deg);
	transform: skew(-20deg) rotate(5deg);
	position:absolute;
	top:-13px;
	right:20px;
	z-index:0;
}
.intro {
	display:block;
	position:relative;
	box-sizing: border-box;
	z-index:1;
	padding:15px 40px;
	width:100%;
	margin-top: 100px;



}
@media(max-width:480px) {
	.intro-wrapper {
		margin-left: auto;
		margin-right: auto;
	}


}
@media(max-width:400px) {
	.intro-wrapper {
		width: 100%;
		h2 {
			margin-left: 0;
			-webkit-transform: rotate(0deg);
			-moz-transform: rotate(0deg);
			-o-transform: rotate(0deg);
			transform: rotate(0deg);
		}	
		.property {
			margin-top: 0;
		}
	}
	.intro {
		margin-top: 30px;
	}

}


.intro a {
	color: #fff;
	text-decoration: underline;
}
#about-page {
	font-size: 1.3em;

}
#about-row {
	background: url("<%= asset_path 'christ4.jpg' %>") no-repeat;
	background-size: cover;
	background-attachment: fixed;
}

@media(max-width:480px) {
	#about-row {
		background: url("../img/christ3.jpg");
		background-size: cover;
		background-attachment: fixed;


	}
}

/*---------End-------------
--- landing page header --
---------------------------*/




