.main-outer {
	webkit-transform: skewY(4deg);
	-moz-transform: skewY(4deg);
	-ms-transform: skewY(4deg);
	-o-transform: skewY(4deg);
	transform: skewY(4deg);
	background-color: #fff;

	padding-top: 150px;
	padding-bottom: 100px;
	margin-top: -50px;
}
.blur {

 -webkit-filter: blur(5px); 
	 	-moz-filter: blur(5px); 
				 filter: blur(5px); 
}

.main-outer .main {

	webkit-transform: skewY(-4deg);
	-moz-transform: skewY(-4deg);
	-ms-transform: skewY(-4deg);
	-o-transform: skewY(-4deg);
	transform: skewY(-4deg);

	clear: both;
	padding: 20px .5em;
	margin: auto;

	.view-all {
			margin-top: 30px;
			margin-bottom: 70px;
			text-align: center;
			font-size: 1.5em;
			a:hover {
				text-decoration: none;
			}
		}
	.articles {
			padding-left: 5%;
			padding-right: 5%;

			h3{
				margin-bottom: .1em;
			}

			h3:not(:first-of-type) {
				margin-top: 50px;
			}
		}

	.portfolio {

		.work-outer {
			position: relative;
			margin: 0;
			padding: 0;
			min-height: 300px;
			z-index: 1;
				.work {
					margin: 0;
					padding: 15px;
					position: relative;
					min-height: 300px;
					z-index: 1;
					}
				.info {

					z-index: 100;
					position: absolute;
					height: 100%;
					width: 100%;
					top:0;
					left: 0;

				a{

						z-index: 100;
						display: block;
						width: 150px;

						margin-left: auto;
						margin-right: auto;
						margin-top: 40%;
						padding: 15px 10px;

						// background-color: rgba(200,55,0,.9);
						background-color: $alpha-orange;
						text-decoration: none;
						color: #fff;
						text-align: center;
						text-transform: uppercase;

						-webkit-transition: all 600ms;
										transition: all 600ms;

						-webkit-transition-property: color;
										transition-property: color;

						&:hover {
							color: #c83700;
							background-color: rgba(255,255,255,0.9);
						}

					}
				}
			}
		}
	}

	.image {
		display:block;
		margin-right: auto;
		margin-left: auto;

	}

	.image img {
		width: 100%;
	}


