
@import "global";




* {box-sizing: border-box;}

html,body {
	min-height: 100%;
}

body {
	position: relative;
	font-family: 'Comfortaa', cursive;
}

h1,h2,h3,h4,h5,h6 {
	font-family: $header-font;
		color: #545454;

}

h1 {
	text-align: center;
	font-size: 3em;
	margin: 50px auto;
}

a{
	color: $alpha-orange;
	transition: all 600ms;
	&:hover, &:focus {
		color: $alpha-yellow;
	}

}

.row { 
	margin-right: 0;
	margin-left: 0;

}



.container-fluid {
	padding-left: 0;
	padding-right: 0;
}



.lined-h {
	text-align: center;
	line-height: 0.4em;

	margin-bottom: 50px;
	span {
		display: inline-block;
		position: relative;  
		&:before,
		&:after {
			content: "";
			position: absolute;
			height: 8px;
			border-bottom: 2px solid $alpha-yellow;
			border-top: 2px solid $alpha-yellow;
			top: 0;
			width: 100px;
		}
		&:before {
			right: 100%;
			margin-right: 15px;
		}
		&:after {
			left: 100%;
			margin-left: 15px;
		}
	}
}



.date {
	font-size: .9em;
	color: $gray;
	margin-top: 0;
}




