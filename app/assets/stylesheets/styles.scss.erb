
@import "global";




* {box-sizing: border-box;}

html,body {
	min-height: 100%;
}

body {
	position: relative;
	font-family: 'Comfortaa', cursive;
	font-size: 1.7em;
}

h1,h2,h3,h4,h5,h6 {
	font-family: $header-font;
		color: #545454;

}

h1 {
	text-align: center;
	font-size: 3em;
	margin: 50px auto;
}

a{
	color: $alpha-orange;
	transition: all 600ms;
	&:hover, &:focus {
		color: $alpha-yellow;
	}

}

.project_button {

						
						padding: 15px 10px;

						background-color: $alpha-orange;
						text-decoration: none;
						color: #fff;
						text-align: center;
						text-transform: uppercase;

						-webkit-transition: all 600ms;
										transition: all 600ms;

						-webkit-transition-property: color;
										transition-property: color;

						&:hover {
							color: $dark-orange;
							background-color: rgba(255,255,255,0.9);
							text-decoration: none;
							border: 1px solid $dark-orange;

						}

						&:focus {
							background-color: $alpha-orange;
							text-decoration: none;
							color: #fff;
						}
	}

.button_wrapper {
	padding: 4em 0 0 0;
	text-align: center;
}	
.row { 
	margin-right: 0;
	margin-left: 0;

}

.skinny_wrapper {
	 width: 80%;
	 margin: auto;

}

.container-fluid , .container{
	padding-left: 0;
	padding-right: 0;
}



.lined-h {
	text-align: center;
	line-height: 0.4em;

	margin-bottom: 50px;
	span {
		display: inline-block;
		position: relative;  
		&:before,
		&:after {
			content: "";
			position: absolute;
			height: 8px;
			border-bottom: 2px solid $alpha-yellow;
			border-top: 2px solid $alpha-yellow;
			top: 0;
			width: 100px;
		}
		&:before {
			right: 100%;
			margin-right: 15px;
		}
		&:after {
			left: 100%;
			margin-left: 15px;
		}
	}
}



.date {
	font-size: .9em;
	color: $gray;
	margin-top: 0;
}

.border {
		&:after {
			content: "";
			position: absolute;
			height: 8px;
			border-bottom: 2px solid $alpha-yellow;
			border-top: 2px solid $alpha-yellow;
			top: 294px;
			width: 100%;
		}

	}

	.border_sm {
		&:after {
			content: "";
			position: absolute;
			height: 8px;
			border-bottom: 2px solid $alpha-yellow;
			border-top: 2px solid $alpha-yellow;
			top: 294px;
			width: 30%;


		}

	

	}

hr {
    display: block;
    height: 1px;
    border: 0;
    border-top: 1px solid $light-gray;
    margin: 2em auto;
    padding: 0; 
    width: 50%;
}

