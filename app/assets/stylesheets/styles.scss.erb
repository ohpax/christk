
/*------------------------
---------Variables--------
-------------------------*/

$alpha-orange: rgba(200,55,0,.7);
$alpha-yellow: rgba(240,200,0,.7);
$header-font:  'Black Ops One', cursive;




/*------------------------
------End Variables-------
-------------------------*/



* {box-sizing: border-box;}

html,body {
	min-height: 100%;
}

body {
	position: relative;
	font-family: 'Comfortaa', cursive;
}

h1,h2,h3,h4,h5,h6 {
	font-family: $header-font;
}

h1 {
	text-align: center;
	font-size: 3em;
	color: #5b5b5b;
	margin: 50px auto;
}

a{
	color: $alpha-orange;
	transition: all 600ms;
	&:hover, &:focus {
		color: $alpha-yellow;
	}

}

.row { 
	margin-right: 0;
	margin-left: 0;

}



.container-fluid {
	padding-left: 0;
	padding-right: 0;
}



.lined-h {
	text-align: center;
	line-height: 0.4em;
	margin-bottom: 50px;

	span {
		display: inline-block;
		position: relative;  

		&:before,
		&:after {
			content: "";
			position: absolute;
			height: 8px;
			border-bottom: 2px solid $alpha-yellow;
			border-top: 2px solid $alpha-yellow;
			top: 0;
			width: 40%;
		}
		&:before {
			right: 100%;
			margin-right: 15px;
		}
		&:after {
			left: 100%;
			margin-left: 15px;
		}
	}
}








/*------------------------
--------Works--------
-------------------------*/


.main-outer {
	webkit-transform: skewY(4deg);
	-moz-transform: skewY(4deg);
	-ms-transform: skewY(4deg);
	-o-transform: skewY(4deg);
	transform: skewY(4deg);
	background-color: #fff;

	padding-top: 150px;
	padding-bottom: 100px;
	margin-top: -50px;
}
.blur {

 -webkit-filter: blur(5px); 
	 	-moz-filter: blur(5px); 
				 filter: blur(5px); 
}

.main-outer .main {

	webkit-transform: skewY(-4deg);
	-moz-transform: skewY(-4deg);
	-ms-transform: skewY(-4deg);
	-o-transform: skewY(-4deg);
	transform: skewY(-4deg);

	clear: both;
	padding: 20px .5em;
	margin: auto;

	.view-all {
			margin-top: 30px;
			margin-bottom: 70px;
			text-align: center;
			font-size: 1.5em;
			a:hover {
				text-decoration: none;
			}
		}
	.articles {
			padding-left: 5%;
			padding-right: 5%;

			h3:not(:first-of-type) {
				margin-top: 50px;
			}
		}

	.portfolio {

		.work-outer {
			position: relative;
			margin: 0;
			padding: 0;
			min-height: 300px;
			z-index: 1;
				.work {
					margin: 0;
					padding: 15px;
					position: relative;
					min-height: 300px;
					z-index: 1;
					}
				.info {

					z-index: 100;
					position: absolute;
					height: 100%;
					width: 100%;
					top:0;
					left: 0;

				a{

						z-index: 100;
						display: block;
						width: 150px;

						margin-left: auto;
						margin-right: auto;
						margin-top: 40%;
						padding: 15px 10px;

						background-color: rgba(200,55,0,.9);
						text-decoration: none;
						color: #fff;
						text-align: center;
						text-transform: uppercase;

						-webkit-transition: all 600ms;
										transition: all 600ms;

						-webkit-transition-property: color;
										transition-property: color;

						&:hover {
							color: #c83700;
							background-color: rgba(255,255,255,0.9);
						}

					}
				}
			}
		}
	}

	.image {
		display:block;
		margin-right: auto;
		margin-left: auto;

	}

	.image img {
		width: 100%;
	}


/*------------------------
-------End Works-----
-------------------------*/







/*------------------------
---------Footer-----------
-------------------------*/

footer {
	height: 100px;
	background-color: #000;
	text-align: left;
	position: relative;
	border-top: 3px $alpha-yellow solid;
	color: #fff;
	overflow:hidden;

}

.social-icons {
	padding: 0;
	margin-bottom: 10px;
	background-color: none;
	text-align: center;
	position: relative;
	height: 100px;
	z-index: 1;
	
	ul {
		margin-top: 10px;
		margin-left: 15px;
		padding: 0;	
		font-size: 4em;

		i {
			margin: 10px 15px;
		}
	}

	&:after {
		background: $alpha-yellow;
		display:block;
		content:'';
		width:100%;
		height:600px;
		-webkit-transform: skew(-20deg) rotate(15deg);
		-moz-transform: skew(-20deg) rotate(15deg);
		-o-transform: skew(-20deg) rotate(15deg);
		transform: skew(-20deg) rotate(15deg);
		position:absolute;
		top:-35px;
		left: -10%;
		z-index:-1;

	}


	&:before {
		background: $alpha-orange;
		display:block;
		content:'';
		width:15%;
		height:600px;
		-webkit-transform: skew(-20deg) rotate(15deg);
		-moz-transform: skew(-20deg) rotate(15deg);
		-o-transform: skew(-20deg) rotate(15deg);
		transform: skew(-20deg) rotate(15deg);
		position:absolute;
		top:-35px;
		left: -35%;
		z-index:-1;

	}

}

@media(max-width:767px) { 
	.social-outer {
		background-color: $alpha-yellow;
		position: relative;
		height: 100px;
		margin:0;

		-webkit-transform: skew(0deg) rotate(0deg);
		-moz-transform: skew(0deg) rotate(0deg);
		-o-transform: skew(0deg) rotate(0deg);
		transform: skew(0deg) rotate(0deg);
	}

	.social-icons {
		position: inherit;
		padding: 0;
		margin-bottom: 0px;
		background-color: none;
		text-align: center;

		-webkit-transform: skew(0deg) rotate(0deg);
		-moz-transform: skew(0deg) rotate(0deg);
		-o-transform: skew(0deg) rotate(0deg);
		transform: skew(0deg) rotate(0deg);

		&:after {
			display: none;
		}

		&:before {

			position:re;
			top: 0;
			left: 0;
			height: 10px;
			width: 165px;
			-webkit-transform: skew(0deg) rotate(0deg);
			-moz-transform: skew(0deg) rotate(0deg);
			-o-transform: skew(0deg) rotate(0deg);
			transform: skew(0deg) rotate(0deg);
		}

	}
	footer {
		height: 200px;

		overflow:auto;

	}

}


.copyright {
	text-align: bottom;
	margin-left: 20px;
	margin-bottom: 10px;
	margin-top: 60px;
	bottom: 0;
	font-size: 1.1em;
}

