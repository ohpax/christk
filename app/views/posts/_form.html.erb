<div class="container">
	
<%= form_for(@post, html: {class: "form-horizontal"}) do |f| %>
	<% if @post.errors.any? %>
		<h2> <%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
		
		<ul>
			<% @post.errors.fulll_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	
	<div class="form-group">
		<%= f.label :title, class: "control-label" %> 
		<%= f.text_field :title, class: "form-control" %>
	</div>

	<br>
	<br>
	<div class="form-group">
		<%= f.label :content, "Write you article here", class: "control-label" %> 
		<%= f.text_area :content, rows: 25, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :blurb, "Write you article here", class: "control-label" %> 
		<%= f.text_area :blurb, rows: 5, class: "form-control" %>
	</div>
	
	<%= f.submit %>
<% end %>
</div>
